<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".AY_Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/map1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/anewgullim3"
            android:text="제주도 / 애월읍    2박3일 "
            android:textAlignment="center"
            android:textColor="#635A58"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/anewgullim2"
            android:text="한림공원 - 에코랜드 - 수목원 "
            android:textAlignment="center"
            android:textColor="#6EAABE"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anewgullim2"
            android:text=" 1일차 숙소: 별빛펜션 "
            android:textAlignment="center"
            android:textColor="#635A58"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anewgullim2"
            android:text="유리의 성 - 키친 오즈 -  브릭캠퍼스"
            android:textAlignment="center"
            android:textColor="#6EAABE"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anewgullim2"
            android:text=" 2일차 숙소: 바다펜션 "
            android:textAlignment="center"
            android:textColor="#635A58"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anewgullim2"
            android:text="산굼부리 - 용눈이 오름 - 러브랜드 - 한담 해안 산책로"
            android:textAlignment="center"
            android:textColor="#6EAABE"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnclose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/anewgullim2"
            android:text="닫기"
            android:textColor="#6EAABE" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>