<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".AY_MainPage">

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="124dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/anewgullim2"
            android:text="여행하기"
            android:background="@drawable/btn_bg"
            android:textColor="#6EAABE"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAfterTrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="349dp" />

        <Button
            android:id="@+id/btnMypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/anewgullim2"
            android:text="마이페이지"
            android:background="@drawable/btn_bg"
            android:textColor="#6EAABE"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="326dp" />

        <Button
            android:id="@+id/btnAfterTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/anewgullim2"
            android:text="여행후기"
            android:background="@drawable/btn_bg"
            android:textColor="#6EAABE"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="326dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>